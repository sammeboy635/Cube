{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "cppbuild",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "-std=c++17",
                "-I./include",
                "-L./lib",
                "${workspaceFolder}/src/\/*.cpp",
                "src/glad.c",
                "-lglfw3dll",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: /usr/bin/g++"
        }
    ]
}